@model Travel_Safe.Models.Review

@{
    ViewBag.Title = "Edit Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="text-center">รายละเอียดรีวิว</h2>

    @using (Html.BeginForm("EditReview", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">แก้ไขรีวิว</h3>
            </div>
            <div class="panel-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ReviewId)

                <!-- Title -->
                <div class="form-group">
                    <label class="control-label">หัวข้อ</label>
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>

                <!-- Content -->
                <div class="form-group">
                    <label class="control-label">เนื้อหา</label>
                    @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                </div>

                <!-- Safety Types -->
                <div class="form-group">
                    <label class="control-label">ความปลอดภัยด้านอาชญากรรม</label>
                    @Html.EditorFor(model => model.SafetyType, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SafetyType, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="control-label">ความปลอดภัยด้านสภาพแวดล้อม</label>
                    @Html.EditorFor(model => model.SafetyType2, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SafetyType2, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label class="control-label">ความปลอดภัยด้านสุขภาพ</label>
                    @Html.EditorFor(model => model.SafetyType3, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SafetyType3, "", new { @class = "text-danger" })
                </div>

                <!-- Additional Tips -->
                <div class="form-group">
                    <label class="control-label">คำแนะนำเพิ่มเติม</label>
                    @Html.EditorFor(model => model.AdditionalTips, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AdditionalTips, "", new { @class = "text-danger" })
                </div>

                <!-- Existing Images -->
                @if (Model.ReviewImages != null && Model.ReviewImages.Count > 0)
                {
                    <div class="form-group">
                        <h4>รูปภาพ</h4>
                        <ul class="list-unstyled">
                            @foreach (var image in Model.ReviewImages)
                            {
                                <li class="media">
                                    <img src="@Url.Content(image.ImageUrl)" class="img-thumbnail" style="max-width: 300px; max-height: 300px;" />
                                    @Html.ActionLink("Delete", "DeleteImage", new { reviewId = Model.ReviewId, imageId = image.ReviewImageId }, new { @class = "btn btn-danger btn-sm" })
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <input type="submit" value="Save Changes" class="btn btn-success" />
            <a href="@Url.Action("AdminIndex")" class="btn btn-default">Cancel</a>
        </div>
    }
</div>
