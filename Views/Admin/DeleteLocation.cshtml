@model Travel_Safe.Models.Location

@{
    ViewBag.Title = "Delete Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Location</h2>

<div>
    <h3>Are you sure you want to delete this location?</h3>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Model.Name</dd>

        <dt>@Html.DisplayNameFor(model => model.Description)</dt>
        <dd>@Model.Description</dd>

        <dt>@Html.DisplayNameFor(model => model.Address)</dt>
        <dd>@Model.Address</dd>

        <dt>@Html.DisplayNameFor(model => model.OpeningHours)</dt>
        <dd>@Model.OpeningHours</dd>

        <dt>@Html.DisplayNameFor(model => model.Contact)</dt>
        <dd>@Model.Contact</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "ProviderDetails", new { id = Model.CreatorId }, new { @class = "btn btn-secondary" })
    }
</div>
