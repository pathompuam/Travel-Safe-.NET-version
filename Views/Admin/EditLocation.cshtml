@model Travel_Safe.Models.Location

@{
    ViewBag.Title = "Edit Location";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2 class="text-center">Edit Location</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.LocationId)

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">แก้ไขรายละเอียดสถานที่</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label class="control-label">ชื่อสถานที่</label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">รายละเอียด</label>
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 5 })
                    @Html.ValidationMessageFor(model => model.Description, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">ที่อยู่สถานที่</label>
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">เวลาเปิด-ปิด</label>
                    @Html.EditorFor(model => model.OpeningHours, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OpeningHours, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label class="control-label">ช่องทางการติดต่อ</label>
                    @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Contact, null, new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">Save</button>
            @Html.ActionLink("Cancel", "ProviderDetails", new { id = Model.CreatorId }, new { @class = "btn btn-default" })
        </div>
    }
</div>
