@model Travel_Safe.Models.Review

@{
    ViewBag.Title = "Edit Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Review</h2>

@using (Html.BeginForm("EditReview", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Review</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ReviewId)

    <!-- Title -->
    <div class="form-group">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Content -->
    <div class="form-group">
        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- SafetyType -->
    <div class="form-group">
        @Html.LabelFor(model => model.SafetyType, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SafetyType, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SafetyType, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- SafetyType -->
    <div class="form-group">
        @Html.LabelFor(model => model.SafetyType2, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SafetyType2, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SafetyType2, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- SafetyType -->
    <div class="form-group">
        @Html.LabelFor(model => model.SafetyType3, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SafetyType3, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SafetyType3, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- AdditionalTips -->
    <div class="form-group">
        @Html.LabelFor(model => model.AdditionalTips, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AdditionalTips, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AdditionalTips, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Display Existing Images -->
    @if (Model.ReviewImages != null && Model.ReviewImages.Count > 0)
    {
        <h4>Existing Images:</h4>
        <ul class="list-unstyled">
            @foreach (var image in Model.ReviewImages)
            {
                <li>
                    <img src="@Url.Content(image.ImageUrl)" width="100" />
                    @Html.ActionLink("Delete", "DeleteImage", new { reviewId = Model.ReviewId, imageId = image.ReviewImageId })
                </li>
            }
        </ul>
    }

    <!-- Save Button -->
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save Changes" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Reviews", "UserReviews", new { id = Model.UserId })
</div>
