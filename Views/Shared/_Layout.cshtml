                                    <option value="เชิงวิทยาศาสตร์และการศึกษา">เชิงวิทยาศาสตร์และการศึกษา</option>
                                    <option value="อื่น ๆ">อื่น ๆ</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="text" name="query" class="form-control" placeholder="ค้นหา" />
                            </div>
                            <button type="submit" class="btn btn-default">🔍</button>
                        </form>

                        <ul class="nav navbar-nav navbar-right">
                            <!-- เมนูสำหรับ User -->
                            <li><a href="~/Home/Index">หน้าแรก</a></li>
                            <li><a href="~/User/CreateReview">เขียนรีวิว</a></li>
                            <li><a href="~/User/UserReviews">รีวิวของฉัน</a></li>



                            <!-- เมนูแสดงชื่อผู้ใช้พร้อม Pop-up -->
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hello, @User.Identity.Name</a>
                                <div class="user-popup dropdown-menu">
                                    <div class="user-profile" style="">
                                        <img src="~/Content/images/profiles/common.png" alt="Profile" class="profile-image" />
                                        <h4 style="color: white;">@User.Identity.Name</h4>
                                    </div>
                                    <div class="user-actions">
                                        @if (User.IsInRole("User"))
                                        {

                                            <button class="btn btn-outline-secondary" type="button" onclick="window.location.href='@Url.Action("Manage", "User")'">
                                                จัดการผู้ใช้
                                            </button>
                                            <button class="btn btn-outline-secondary" type="button" onclick="window.location.href='FavoritesAndWishlists'">สถานที่ชื่นชอบ/อยากไป</button>
                                        }
                                        else if (User.IsInRole("Provider"))
                                        {
                                            <button class="btn btn-outline-secondary">จัดการผู้ใช้</button>
                                            <button class="btn btn-outline-secondary">การแจ้งเตือน</button>
                                        }
                                        else if (User.IsInRole("Admin"))
                                        {
                                            <button class="btn btn-outline-secondary">การแจ้งเตือน</button>
                                            <button class="btn btn-outline-secondary">Dashboard</button>
                                        }
                                        <form action="@Url.Action("LogOff", "Account")" method="post">
                                            @Html.AntiForgeryToken()
                                            <button class="btn" style="background-color: #ffdddd; color: #d9534f;">ออกจากระบบ</button>
                                        </form>
                                    </div>
                                </div>
                            </li>


                        </ul>
                    }
                    else if (User.IsInRole("Provider"))
                    {
                        <!-- สำหรับ Provider -->
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="~/Home/Index">หน้าแรก</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hello, @User.Identity.Name</a>
                                <div class="user-popup dropdown-menu">
                                    <div class="user-profile" style="">
                                        <img src="~/Content/images/profiles/common.png" alt="Profile" class="profile-image" />
                                        <h4 style="color: white;">@User.Identity.Name</h4>
                                    </div>
                                    <div class="user-actions">
                                        @if (User.IsInRole("User"))
                                        {
                                            <button class="btn btn-outline-secondary">จัดการผู้ใช้</button>
                                            <button class="btn btn-outline-secondary" type="button" onclick="window.location.href='FavoritesAndWishlists'">สถานที่ชื่นชอบ/อยากไป</button>
                                        }
                                        else if (User.IsInRole("Provider"))
                                        {
                                            <button class="btn btn-outline-secondary" type="button" onclick="window.location.href='@Url.Action("Manage", "User")'">
                                                จัดการผู้ใช้
                                            </button>

                                        }
                                        else if (User.IsInRole("Admin"))
                                        {
                                            <button class="btn btn-outline-secondary">การแจ้งเตือน</button>
                                            <button class="btn btn-outline-secondary">Dashboard</button>
                                        }
                                        <form action="@Url.Action("LogOff", "Account")" method="post">
                                            @Html.AntiForgeryToken()
                                            <button class="btn" style="background-color: #ffdddd; color: #d9534f;">ออกจากระบบ</button>
                                        </form>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <!-- สำหรับ Admin -->
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="~/Article/Create">เขียนบทความ</a></li>
                            <li><a href="~/Article">ดูบทความ</a></li>
                            <li><a href="~/Admin/AdminIndex">จัดการผู้ใช้</a></li>
                            <li><a href="@Url.Action("ManageReviews", "Admin")">จัดการรีวิว</a></li>
                            <li><a href="@Url.Action("ManagePlaces", "Admin")">จัดการสถานที่</a></li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Hello, @User.Identity.Name</a>
                                <div class="user-popup dropdown-menu">
                                    <div class="user-profile" style="">
                                        <img src="~/Content/images/profiles/common.png" alt="Profile" class="profile-image" />
                                        <h4 style="color: white;">@User.Identity.Name</h4>
                                    </div>
                                    <div class="user-actions">
                                        @if (User.IsInRole("User"))
                                        {
                                            <button class="btn btn-outline-secondary">จัดการผู้ใช้</button>
                                            <button class="btn btn-outline-secondary" type="button" onclick="window.location.href='FavoritesAndWishlists'">สถานที่ชื่นชอบ/อยากไป</button>
                                        }
                                        else if (User.IsInRole("Provider"))
                                        {
                                            <button class="btn btn-outline-secondary">จัดการผู้ใช้</button>
                                            <button class="btn btn-outline-secondary">การแจ้งเตือน</button>
                                        }
                                        else if (User.IsInRole("Admin"))
                                        {
                                            <button class="btn btn-outline-secondary" onclick="window.location.href='@Url.Action("Notifications", "Admin")'">
                                                การแจ้งเตือน
                                            </button>
                                            <button class="btn btn-outline-secondary" onclick="window.location.href='@Url.Action("Dashboard", "Admin")'">
                                                Dashboard
                                            </button>
                                        }
                                        <form action="@Url.Action("LogOff", "Account")" method="post">
                                            @Html.AntiForgeryToken()
                                            <button class="btn" style="background-color: #ffdddd; color: #d9534f;">ออกจากระบบ</button>
                                        </form>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                }
                else
                {
                    <!-- ถ้ายังไม่ได้ล็อกอิน -->
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="~/Home/Index" class="btn btn-outline-primary">หน้าแรก</a></li>
                        <li><a href="~/Account/Login" class="btn btn-success">Sign Up / Login</a></li>
                    </ul>
                    <!-- แสดงแถบค้นหา -->
                    <form class="navbar-form navbar-left" role="search" method="get" action="@Url.Action("Search", "Home")">
                        <div class="form-group">
                            <select name="category" class="form-control" aria-label="หมวดหมู่">
                                <option value="">หมวดหมู่</option>
                                <option value="ธรรมชาติ">ธรรมชาติ</option>
                                <option value="วัฒนธรรมและประวัติศาสตร์">วัฒนธรรมและประวัติศาสตร์</option>
                                <option value="พักผ่อนและบันเทิง">พักผ่อนและบันเทิง</option>
                                <option value="เชิงเกษตร">เชิงเกษตร</option>
                                <option value="เชิงสุขภาพ">เชิงสุขภาพ</option>
                                <option value="ผจญภัยและกิจกรรมกลางแจ้ง">ผจญภัยและกิจกรรมกลางแจ้ง</option>
                                <option value="เชิงวิทยาศาสตร์และการศึกษา">เชิงวิทยาศาสตร์และการศึกษา</option>
                                <option value="อื่น ๆ">อื่น ๆ</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" name="query" class="form-control" placeholder="ค้นหา" />
                        </div>
                        <button type="submit" class="btn btn-default">🔍</button>
                    </form>
                }

            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Travel Safe</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
    /* ลดความยาวของ select */
    .navbar-form .form-group select {
        width: 150px; /* ความกว้างของ select เล็กลง */
    }

    /* เพิ่มความยาวของ input */
    .navbar-form .form-group input {
        width: 250px; /* ความกว้างของ input เพิ่มขึ้น */
    }

    /* เปลี่ยนสีพื้นหลังของปุ่มและเพิ่มกรอบสีขาว */
    .navbar-form .btn-default {
        background-color: #779475; /* สีพื้นหลังของปุ่ม (เปลี่ยนสีตามต้องการ) */
        color: white; /* สีของข้อความในปุ่ม */
        border: 1px solid white; /* กรอบสีขาว */
    }

        /* เปลี่ยนสีพื้นหลังเมื่อ hover ปุ่ม */
        .navbar-form .btn-default:hover {
            background-color: #698567; /* สีพื้นหลังเมื่อ hover (สามารถเปลี่ยนได้) */
            border-color: white; /* สีกรอบเมื่อ hover */
        }
</style>
